{
  "pluginAlias": "IoBroker",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "url": {
      "title": "Url of simpleapi instance",
      "type": "string"
    },
    "port": {
      "title": "Port of simpleapi instance",
      "type": "number"
    },
    "devices": {
      "title": "List of all devices",
      "type": "array",
      "items": {
        "title": "Device",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "required": true
          },
          "onstate": {
            "title": "State for On Value",
            "type": "string",
            "required": true
          },
          "switch": {
            "title": "Shows the device as switch",
            "type": "boolean"
          },
          "colortemp": {
            "title": "Color Temperature",
            "type": "string"
          },
          "brightness": {
            "title": "Brightness",
            "type": "string"
          }
        }
      }
    }
  }
}